<h1>Students</h1>

<%= link_to "Add student", new_student_path %>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Identication</th>
			<th>Created at</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @students.each do |student| %>
			<tr>
				<td><%= student.name %></td>
				<td><%= student.identification %></td>
				<td><%= student.created_at.strftime("%d-%b-%Y") %></td>
				<td><%= link_to "edit", edit_student_path(student) %></td>
				<td><%= link_to "show", student_path(student) %></td>
			</tr>
		<% end %>
	</tbody>
</table>