<%= form_for student do |f| %>
	
  <ul>
	  <% student.errors.full_messages.each do |message| %>
	    <li><%= message %></li>
	  <% end %>
  </ul>
  
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div>
		<%= f.label :code %>
		<%= f.text_field :code %>
	</div>

	<div>
		<%= f.label :subjects %>
		<%= f.collection_check_boxes :subject_ids, Subject.all, :id, :name %>
	</div>


	<div>
		<%= f.submit %>
	</div>

<% end %>