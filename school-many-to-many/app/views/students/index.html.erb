<h1>Students</h1>

<%= link_to "Add student", new_student_path %>

<ul>
	<% @students.each do |student| %>
		<li class="student">
			<span class="student-name"><%= student.name %></span>
		</li>
	<% end %>
</ul>

<h3>Students with M in the name</h3>
<ul>
	<% @students2.each do |student| %>
		<li class="student">
			<span class="student-name"><%= student.name %></span>
		</li>
	<% end %>
</ul>

<h3>Estudiante con parametro dinamico</h3>
<ul>
	<% @students3.each do |student| %>
		<li class="student">
			<span class="student-name"><%= student.name %></span>
		</li>
	<% end %>
</ul>

<%= form_tag "/students", method: :get do |f| %>
	<%= label_tag "Nombre" %>
	<%= text_field_tag :name %>
	<%= submit_tag "Buscar" %>
<% end %>


