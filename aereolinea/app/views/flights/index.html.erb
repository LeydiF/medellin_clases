<p id="notice"><%= notice %></p>

<h1>Vuelos</h1>

<table>
  <thead>
    <tr>
      <th>Ruta</th>
      <th>Avion</th>
      <th>Piloto</th>
      <th>Fecha</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.route.define_route %></td>
        <td><%= flight.airplane.reference %></td>
        <td><%= flight.pilot.complete %></td>
        <td><%= flight.date.strftime("%B %d %Y %H:%M:%S") %></td>
        <td><%= number_to_currency flight.price %></td>
        <td><%= link_to 'Ver', flight %></td>
        <td><%= link_to 'Editar', edit_flight_path(flight) %></td>
        <td><%= link_to 'comprar', buy_ticket_path(flight: flight.id, id: 1) %></td>
        <td><%= link_to 'Eliminar', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

